<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tl="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	<!--tl:tl_tab_width="@dimen/dp90"-->
	<com.flyco.tablayout.SlidingTabLayout
		android:id="@+id/tablayout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginTop="@dimen/dp10"
		android:background="@color/colorWhite"
		tl:tl_divider_color="@color/add_card_hint"
		tl:tl_divider_padding="@dimen/dp10"
		tl:tl_divider_width="@dimen/dp1"
		tl:tl_indicator_color="@color/color_card_ok"
		tl:tl_indicator_height="1.5dp"
		tl:tl_indicator_width_equal_title="true"
		tl:tl_tab_padding="@dimen/dp15"
		tl:tl_tab_space_equal="true"
		tl:tl_textBold="BOTH"
		tl:tl_textSelectColor="@color/color_card_ok"
		tl:tl_textUnselectColor="@color/color_pub_tv"
		tl:tl_underline_color="#1A000000"
		tl:tl_underline_height="@dimen/dp1"
		/>
	
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp1"
		android:background="#eeeeee"
		/>
	
	<app.card.view.ForbidViewPager
		android:id="@+id/set_viewpager"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp400"
		/>
</LinearLayout>