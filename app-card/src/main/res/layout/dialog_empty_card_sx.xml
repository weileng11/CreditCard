<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:background="@mipmap/dialog_sx_bg"
		android:orientation="vertical"
		>
		
		<TextView
			android:id="@+id/txv_sx_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center"
			android:layout_margin="@dimen/dp18"
			android:text="发起授信"
			android:textColor="@color/grayColor_main"
			android:textSize="@dimen/dp16"
			/>
		<!--<View-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="1.5dp"-->
		<!--android:layout_marginLeft="@dimen/dp10"-->
		<!--android:layout_marginRight="@dimen/dp10"-->
		<!--android:background="@drawable/shape_dash_line"-->
		<!--/>-->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dp10"
			android:text="请输入授信额度(元)"
			android:textColor="@color/color_pub_tv"
			android:textSize="@dimen/sp12"
			/>
		
		<TextView
			android:id="@+id/txv_sx_money"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="@dimen/dp10"
			android:text="¥:0.00"
			android:textColor="@color/grayColor_main"
			android:textSize="@dimen/sp24"
			/>
		
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dp40"
			>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dp15"
				android:text="费率"
				android:textColor="@color/color_pub_tv"
				android:textSize="@dimen/dp14"
				/>
			
			<TextView
				android:id="@+id/txv_sx_fl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dp15"
				android:text="5%"
				android:textColor="@color/color_pub_tv"
				android:textSize="@dimen/dp14"
				/>
		</RelativeLayout>
		
		<View
			android:layout_width="wrap_content"
			android:layout_height="1.5dp"
			android:layout_marginLeft="@dimen/dp10"
			android:layout_marginRight="@dimen/dp10"
			android:background="@drawable/shape_dash_line"
			/>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp40"
			>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dp15"
				android:text="服务费"
				android:textColor="@color/color_pub_tv"
				android:textSize="@dimen/dp14"
				/>
			
			<TextView
				android:id="@+id/txv_sx_fw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dp15"
				android:text="13.33"
				android:textColor="@color/color_pub_tv"
				android:textSize="@dimen/dp14"
				/>
		</RelativeLayout>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="1.5dp"
			android:layout_marginLeft="@dimen/dp10"
			android:layout_marginRight="@dimen/dp10"
			android:background="@drawable/shape_dash_line"
			/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dp50"
			android:layout_marginRight="@dimen/dp50"
			android:layout_marginTop="@dimen/dp20"
			android:orientation="horizontal"
			>
			
			<TextView
				android:id="@+id/txv_sx_cancel"
				android:layout_width="0dp"
				android:layout_height="@dimen/dp38"
				android:layout_marginRight="@dimen/dp30"
				android:layout_weight="1"
				android:background="@drawable/bg_color_eeeeee"
				android:gravity="center"
				android:text="取消申请"
				/>
			
			<TextView
				android:id="@+id/txv_sx_commit"
				android:layout_width="0dp"
				android:layout_height="@dimen/dp38"
				android:layout_weight="1"
				android:background="@drawable/bg_color_okorder"
				android:gravity="center"
				android:text="提交申请"
				android:textColor="@color/colorWhite"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>