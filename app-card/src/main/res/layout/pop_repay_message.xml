<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<android.support.v7.widget.CardView
		android:id="@+id/car"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dp30"
		android:layout_marginRight="@dimen/dp30"
		app:cardCornerRadius="@dimen/dp5"
		app:cardElevation="@dimen/dp2"
		app:cardMaxElevation="@dimen/dp5"
		app:cardPreventCornerOverlap="true"
		app:cardUseCompatPadding="true"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			
			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="@dimen/dp5"
				app:cardElevation="@dimen/dp2"
				app:cardMaxElevation="@dimen/dp3"
				app:cardPreventCornerOverlap="true"
				app:cardUseCompatPadding="true"
				>
				
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/poison"
					/>
				
				<TextView
					android:id="@+id/tv_title"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp50"
					android:gravity="center"
					android:text="温馨提示"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp16"
					/>
			</android.support.v7.widget.CardView>
			
			<TextView
				android:id="@+id/tv_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorWhite"
				android:gravity="center"
				android:paddingBottom="@dimen/dp20"
				android:paddingLeft="@dimen/dp20"
				android:paddingRight="@dimen/dp20"
				android:paddingTop="@dimen/dp15"
				android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
				android:textColor="@color/grayColor_main"
				android:textSize="@dimen/sp13"
				/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp65"
				android:orientation="horizontal"
				android:visibility="gone"
				>
				
				<android.support.v7.widget.CardView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_marginBottom="@dimen/dp15"
					android:layout_marginLeft="@dimen/dp40"
					android:layout_marginTop="@dimen/dp10"
					android:layout_weight="1"
					android:foreground="?attr/selectableItemBackground"
					app:cardBackgroundColor="@color/colorWhite"
					app:cardCornerRadius="@dimen/dp20"
					app:cardElevation="@dimen/dp2"
					>
					
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:gravity="center"
						android:text="取消"
						android:textColor="@color/color_pub_tv1"
						android:textSize="@dimen/sp16"
						/>
				</android.support.v7.widget.CardView>
				
				<android.support.v7.widget.CardView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_marginBottom="@dimen/dp15"
					android:layout_marginLeft="@dimen/dp40"
					android:layout_marginRight="@dimen/dp40"
					android:layout_marginTop="@dimen/dp10"
					android:layout_weight="1"
					android:foreground="?attr/selectableItemBackground"
					app:cardBackgroundColor="@color/color_card_b1"
					app:cardCornerRadius="@dimen/dp20"
					app:cardElevation="@dimen/dp2"
					>
					
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:gravity="center"
						android:text="确定"
						android:textColor="@color/colorWhite"
						android:textSize="@dimen/sp16"
						/>
				</android.support.v7.widget.CardView>
			</LinearLayout>
			
			<android.support.v7.widget.CardView
				android:id="@+id/card_ok_add"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp40"
				android:layout_marginBottom="@dimen/dp15"
				android:layout_marginLeft="@dimen/dp65"
				android:layout_marginRight="@dimen/dp65"
				android:layout_marginTop="@dimen/dp10"
				android:layout_weight="1"
				android:foreground="?attr/selectableItemBackground"
				app:cardBackgroundColor="@color/color_card_b1"
				app:cardCornerRadius="@dimen/dp15"
				app:cardElevation="@dimen/dp2"
				>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="知道了"
					android:textColor="@color/colorWhite"
					android:textSize="@dimen/sp14"
					/>
			</android.support.v7.widget.CardView>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>