<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	
	<include layout="@layout/toolbar" />
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp10"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical"
			>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_cvn"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="CVN2"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<ImageView
					android:layout_width="@dimen/dp18"
					android:layout_height="@dimen/dp18"
					android:layout_marginLeft="@dimen/dp5"
					android:src="@drawable/ic_help_outline_black_24dp"
					/>
				
				<EditText
					android:id="@+id/ed_cvn"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp35"
					android:layout_marginLeft="@dimen/dp50"
					android:background="@null"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="请输入信用卡背后CVN2后3位数"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textColorHint="@color/add_card_hint"
					android:textSize="@dimen/sp14"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_yxq"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="有效期"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<ImageView
					android:layout_width="@dimen/dp18"
					android:layout_height="@dimen/dp18"
					android:layout_marginLeft="@dimen/dp5"
					android:src="@drawable/ic_help_outline_black_24dp"
					/>
				
				<EditText
					android:id="@+id/ed_indate"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp35"
					android:layout_marginLeft="@dimen/dp60"
					android:background="@null"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="请输入有效期月年(如0922)"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textColorHint="@color/add_card_hint"
					android:textSize="@dimen/sp14"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:id="@+id/ll_card_type"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_fkh"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="发卡银行"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<include layout="@layout/space" />
				
				<TextView
					android:id="@+id/txv_card_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp120"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="招商银行"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:id="@+id/ll_card_zdr"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_zdr"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="账单日"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<include layout="@layout/space" />
				
				<TextView
					android:id="@+id/txv_card_zdr"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp120"
					android:layout_marginRight="@dimen/dp10"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="设置账单"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<ImageView
					android:layout_width="@dimen/dp9"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/arrow_right"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:id="@+id/ll_card_hai_money"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_zdr"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="还款日"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<include layout="@layout/space" />
				
				<TextView
					android:id="@+id/txv_card_hai_money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp120"
					android:layout_marginRight="@dimen/dp10"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="设置还款日"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<ImageView
					android:layout_width="@dimen/dp9"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/arrow_right"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_phone"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="手机号码"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<EditText
					android:id="@+id/ed_phone"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp35"
					android:layout_marginLeft="@dimen/dp100"
					android:background="@null"
					android:ellipsize="end"
					android:gravity="right|center"
					android:hint="请输入银行预留号码"
					android:maxLines="1"
					android:inputType="number"
					android:textColor="@color/grayColor_main"
					android:textColorHint="@color/add_card_hint"
					android:textSize="@dimen/sp14"
					/>
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp10"
				android:background="@color/grayColor_line"
				/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				android:visibility="gone"
				>
				
				<EditText
					android:id="@+id/ed_imgae_code"
					android:layout_width="0dp"
					android:layout_height="@dimen/dp40"
					android:layout_weight="1.6"
					android:background="@drawable/bg_color_white_stocke"
					android:ellipsize="end"
					android:gravity="center"
					android:hint="请输入图像验证码"
					android:maxLines="1"
					android:textColor="@color/grayColor_main"
					android:textColorHint="@color/add_card_hint"
					android:textSize="@dimen/sp14"
					/>
				
				<app.card.view.VerificationCodeView
					android:id="@+id/iv_imgae_code"
					android:layout_width="0dp"
					android:layout_height="@dimen/dp45"
					android:layout_marginLeft="@dimen/dp15"
					android:layout_weight="1"
					/>
				
				<ImageView
					android:id="@+id/iv_resush_code"
					android:layout_width="@dimen/dp21"
					android:layout_height="@dimen/dp21"
					android:layout_marginLeft="@dimen/dp10"
					android:src="@mipmap/card_resush"
					/>
			</LinearLayout>
			
			<View style="@style/project_line" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp58"
				android:background="@color/colorWhite"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp15"
				android:paddingRight="@dimen/dp15"
				>
				
				<ImageView
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp16"
					android:src="@mipmap/card_code"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:text="验证码"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>
					
					<EditText
						android:id="@+id/ed_card_code"
						android:layout_width="match_parent"
						android:layout_height="@dimen/dp35"
						android:layout_centerVertical="true"
						android:layout_marginLeft="@dimen/dp30"
						android:layout_marginRight="@dimen/dp100"
						android:background="@null"
						android:ellipsize="end"
						android:hint="请输入验证码"
						android:maxLines="1"
						android:inputType="number"
						android:paddingLeft="@dimen/dp5"
						android:textColor="@color/grayColor_main"
						android:textColorHint="@color/add_card_hint"
						android:textSize="@dimen/sp14"
						/>
					
					<android.support.v7.widget.CardView
						android:layout_width="@dimen/dp80"
						android:layout_height="@dimen/dp35"
						android:layout_alignParentRight="true"
						android:layout_margin="@dimen/dp5"
						android:foreground="?attr/selectableItemBackground"
						app:cardBackgroundColor="@color/color_card_b1"
						app:cardCornerRadius="@dimen/dp5"
						app:cardElevation="@dimen/dp2"
						>
						
						<TextView
							android:id="@+id/txv_get_code"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:padding="@dimen/dp2"
							android:text="获取验证码"
							android:textColor="@color/colorWhite"
							android:textSize="@dimen/sp12"
							/>
					</android.support.v7.widget.CardView>
				</RelativeLayout>
			</LinearLayout>
			
			<android.support.v7.widget.CardView
				android:id="@+id/card_save"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp48"
				android:layout_marginBottom="@dimen/dp10"
				android:layout_marginLeft="@dimen/dp20"
				android:layout_marginRight="@dimen/dp20"
				android:layout_marginTop="@dimen/dp30"
				android:layout_weight="1"
				android:foreground="?attr/selectableItemBackground"
				app:cardBackgroundColor="@color/color_card_ok"
				app:cardCornerRadius="@dimen/dp5"
				app:cardElevation="@dimen/dp2"
				>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="保存"
					android:textColor="@color/colorWhite"
					android:textSize="@dimen/sp16"
					/>
			</android.support.v7.widget.CardView>
		</LinearLayout>
	</ScrollView>
	
	<include layout="@layout/toolbar" />
</LinearLayout>