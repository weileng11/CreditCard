<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
	
	<LinearLayout
		android:id="@+id/ll_head"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp67"
			android:background="@color/colorWhite"
			android:orientation="horizontal"
			>
			
			<LinearLayout
				android:layout_width="@dimen/dp0"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="10人"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp10"
					android:text="共计担保人数"
					android:textColor="@color/color_pub_tv1"
					android:textSize="@dimen/sp12"
					/>
			</LinearLayout>
			
			<View
				android:layout_width="@dimen/dp1"
				android:layout_height="match_parent"
				android:layout_marginBottom="@dimen/dp10"
				android:layout_marginTop="@dimen/dp10"
				android:background="@color/grayColor_line"
				/>
			
			<LinearLayout
				android:layout_width="@dimen/dp0"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0000"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp14"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp10"
					android:text="担保额度"
					android:textColor="@color/color_pub_tv1"
					android:textSize="@dimen/sp12"
					/>
			</LinearLayout>
		</LinearLayout>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp10"
			android:background="@color/grayColor_line"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp94"
		android:background="@color/colorWhite"
		android:orientation="horizontal"
		>
		
		<app.card.view.CircleHeadImageView
			android:layout_width="@dimen/dp47"
			android:layout_height="@dimen/dp47"
			android:layout_gravity="center"
			android:layout_marginLeft="@dimen/dp15"
			android:src="@mipmap/app_launch"
			/>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dp5"
			android:orientation="vertical"
			>
			
			<LinearLayout
				android:layout_width="@dimen/dp140"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				
				<TextView
					android:id="@+id/txv_user_name"
					android:layout_width="@dimen/dp75"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp15"
					android:ellipsize="end"
					android:maxEms="10"
					android:maxLines="1"
					android:text="未知名称"
					android:textColor="@color/grayColor_main"
					android:textSize="@dimen/sp16"
					/>
				
				<ImageView
					android:id="@+id/iv_user_dj"
					android:layout_width="@dimen/dp27"
					android:layout_height="@dimen/dp12"
					android:layout_marginTop="@dimen/dp17"
					android:src="@mipmap/app_launch"
					/>
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				
				<TextView
					android:id="@+id/txv_user_fl"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp10"
					android:text="费率:6%"
					android:textColor="@color/color_pub_tv1"
					android:textSize="@dimen/sp12"
					/>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp20"
					android:layout_marginTop="@dimen/dp10"
					android:text="授权额度:500"
					android:textColor="@color/color_pub_tv1"
					android:textSize="@dimen/sp12"
					android:visibility="gone"
					/>
			</LinearLayout>
			
			<TextView
				android:id="@+id/txv_user_fw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp10"
				android:text="服务费:60"
				android:textColor="@color/color_pub_tv1"
				android:textSize="@dimen/sp12"
				/>
		</LinearLayout>
		
		<include layout="@layout/space" />
		
		<android.support.v7.widget.CardView
			android:id="@+id/card_user_sq"
			app:cardBackgroundColor="@color/color_card_ok"
			app:cardCornerRadius="@dimen/dp5"
			app:cardElevation="@dimen/dp2"
			app:contentPadding="@dimen/dp5"
			android:layout_width="@dimen/dp78"
			android:layout_height="@dimen/dp30"
			android:layout_gravity="center"
			android:layout_marginRight="@dimen/dp15"
			android:foreground="?attr/selectableItemBackground"
			>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="修改费用"
				android:textColor="@color/colorWhite"
				android:textSize="@dimen/sp14"
				/>
		</android.support.v7.widget.CardView>
		
	</LinearLayout>
	
	<View style="@style/project_line" />
</LinearLayout>