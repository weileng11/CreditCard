<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/ll_card_banner"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dp171"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp171"
		android:layout_marginLeft="@dimen/dp10"
		android:layout_marginRight="@dimen/dp10"
		app:cardBackgroundColor="@color/colorWhite"
		app:cardCornerRadius="@dimen/dp10"
		app:cardElevation="@dimen/dp2"
		>
		
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>
			
			<ImageView
				android:id="@+id/iv_card_bg"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:src="@mipmap/app_launch"
				android:visibility="gone"
				/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_marginRight="@dimen/dp10"
					android:layout_marginTop="@dimen/dp10"
					android:orientation="horizontal"
					>
					
					<android.support.v7.widget.CardView
						android:id="@+id/crad_status_lang"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp5"
						android:layout_marginRight="@dimen/dp15"
						app:cardBackgroundColor="@color/grayColor_main"
						app:cardCornerRadius="@dimen/dp5"
						app:cardElevation="@dimen/dp2"
						>
						
						<TextView
							android:id="@+id/txv_status_lang"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingBottom="@dimen/dp2"
							android:paddingLeft="@dimen/dp5"
							android:paddingRight="@dimen/dp5"
							android:paddingTop="@dimen/dp2"
							android:text="审核失败"
							android:textSize="@dimen/sp12"
							android:textColor="@color/colorWhite"
							/>
					</android.support.v7.widget.CardView>
					
					<ImageView
						android:id="@+id/iv_bank_delete"
						android:layout_width="@dimen/dp30"
						android:layout_height="@dimen/dp30"
						android:src="@mipmap/iv_delete"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp35"
					android:layout_marginTop="@dimen/dp35"
					android:orientation="horizontal"
					>
					
					<TextView
						android:id="@+id/txv_card_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未知名称"
						android:textColor="@color/colorWhite"
						android:textSize="@dimen/sp16"
						/>
					
					<TextView
						android:id="@+id/txv_card_model"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp30"
						android:text="未知名称"
						android:textColor="@color/colorWhite"
						android:textSize="@dimen/sp14"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp18"
					android:orientation="horizontal"
					>
					
					<TextView
						android:id="@+id/txv_card_num"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp15"
						android:text="信用卡:6223xxxxxxxx123"
						android:textColor="@color/color_banner_tv"
						android:textSize="@dimen/dp14"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="@dimen/dp10"
					android:layout_marginRight="@dimen/dp120"
					android:layout_marginTop="@dimen/dp3"
					android:orientation="horizontal"
					>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_limit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="1"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="额度"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_bill"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="18"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="账单日"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_hai_ri"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="6"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="还款日"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					<!--<LinearLayout-->
					<!--android:layout_width="@dimen/dp0"-->
					<!--android:layout_height="match_parent"-->
					<!--android:layout_weight="2"-->
					<!--android:orientation="horizontal"-->
					<!--&gt;-->
					<!---->
					<!--<include layout="@layout/space"/>-->
					<!---->
					<!--<ImageView-->
					<!--android:id="@+id/iv_crad_unionpay"-->
					<!--android:layout_width="@dimen/dp60"-->
					<!--android:layout_height="@dimen/dp45"-->
					<!--android:layout_marginRight="@dimen/dp10"-->
					<!--android:scaleType="fitXY"-->
					<!--/>-->
					<!---->
					<!--</LinearLayout>-->
				</LinearLayout>
			</LinearLayout>
		</FrameLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>