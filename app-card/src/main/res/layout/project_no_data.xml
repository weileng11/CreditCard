<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rl_project_no_data"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		
		<ImageView
			android:id="@+id/iv_project_no_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:background="@mipmap/card_plan_nodata"
			android:scaleType="centerCrop"
			/>
		
		<TextView
			android:id="@+id/txv_project_no_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_project_no_data"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/dp30"
			android:text="暂无数据"
			android:textColor="@color/color_pub_tv1"
			/>
	</RelativeLayout>
</LinearLayout>