<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<LinearLayout
		android:id="@+id/ll_item_card"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp171"
		android:layout_marginBottom="@dimen/dp100"
		android:visibility="gone"
		>
		
		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp171"
			android:layout_marginLeft="@dimen/dp11"
			android:layout_marginRight="@dimen/dp11"
			app:cardBackgroundColor="@color/colorBackgroundFloating"
			app:cardCornerRadius="@dimen/dp10"
			app:cardElevation="@dimen/dp2"
			>
			
			<ImageView
				android:id="@+id/iv_card_item_bg"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:src="@mipmap/app_launch"
				android:visibility="gone"
				/>
			
			<TextView
				android:id="@+id/txv_card_item_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:layout_marginLeft="@dimen/dp15"
				android:layout_marginTop="@dimen/dp40"
				android:text="信用卡:6223xxxxxxxx123"
				android:textColor="@color/color_banner_tv"
				android:textSize="@dimen/dp14"
				/>
		</android.support.v7.widget.CardView>
	</LinearLayout>
	
	<android.support.v7.widget.CardView
		android:id="@+id/card_item_one"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp171"
		android:layout_gravity="bottom"
		android:layout_marginBottom="@dimen/dp10"
		android:layout_marginLeft="@dimen/dp11"
		android:layout_marginRight="@dimen/dp11"
		app:cardBackgroundColor="@color/colorBackgroundFloating"
		app:cardCornerRadius="@dimen/dp10"
		app:cardElevation="@dimen/dp2"
		>
		
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>
			
			<ImageView
				android:id="@+id/iv_card_bg"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@mipmap/app_launch"
				android:visibility="gone"
				/>
			
			<android.support.v7.widget.CardView
				android:id="@+id/crad_status_lang"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_marginRight="@dimen/dp15"
				android:layout_marginTop="@dimen/dp15"
				app:cardBackgroundColor="@color/grayColor_main"
				app:cardCornerRadius="@dimen/dp5"
				app:cardElevation="@dimen/dp2"
				>
				
				<TextView
					android:id="@+id/txv_status_lang"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/dp2"
					android:paddingLeft="@dimen/dp5"
					android:paddingRight="@dimen/dp5"
					android:paddingTop="@dimen/dp2"
					android:text="审核失败"
					android:textSize="@dimen/sp12"
					android:textColor="@color/colorWhite"
					/>
			</android.support.v7.widget.CardView>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp45"
				android:orientation="vertical"
				>
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp35"
					android:layout_marginTop="@dimen/dp30"
					android:orientation="horizontal"
					>
					
					<TextView
						android:id="@+id/txv_card_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未知名称"
						android:textColor="@color/colorWhite"
						android:textSize="@dimen/sp16"
						/>
					
					<TextView
						android:id="@+id/txv_card_model"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp30"
						android:text="未知名称"
						android:textColor="@color/colorWhite"
						android:textSize="@dimen/sp14"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp15"
					android:orientation="horizontal"
					>
					
					<TextView
						android:id="@+id/txv_card_num"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp15"
						android:text="信用卡:6223xxxxxxxx123"
						android:textColor="@color/color_banner_tv"
						android:textSize="@dimen/dp14"
						/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="@dimen/dp15"
					android:layout_marginRight="@dimen/dp120"
					android:layout_marginTop="@dimen/dp3"
					android:orientation="horizontal"
					>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_limit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="2000"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="额度"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_bill"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="18"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="账单日"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="@dimen/dp0"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						>
						
						<TextView
							android:id="@+id/txv_card_hai_ri"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="6"
							android:textColor="@color/color_banner_tv"
							android:textSize="@dimen/sp13"
							/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="还款日"
							android:textColor="@color/color_banner_tv1"
							android:textSize="@dimen/sp12"
							/>
					</LinearLayout>
					<!--<LinearLayout-->
					<!--android:layout_width="@dimen/dp0"-->
					<!--android:layout_height="match_parent"-->
					<!--android:layout_weight="2"-->
					<!--android:orientation="horizontal"-->
					<!--&gt;-->
					<!---->
					<!--<include layout="@layout/space"/>-->
					<!---->
					<!--<ImageView-->
					<!--android:id="@+id/iv_crad_unionpay"-->
					<!--android:layout_width="@dimen/dp60"-->
					<!--android:layout_height="@dimen/dp45"-->
					<!--android:layout_marginRight="@dimen/dp10"-->
					<!--android:scaleType="fitXY"-->
					<!--/>-->
					<!---->
					<!--</LinearLayout>-->
				</LinearLayout>
			</LinearLayout>
		</FrameLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>