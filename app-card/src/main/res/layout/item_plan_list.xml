<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	>
	
	<android.support.v7.widget.CardView
		android:id="@+id/card_xf1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dp10"
		android:layout_marginRight="@dimen/dp10"
		android:layout_marginBottom="10dp"
		android:foreground="?attr/selectableItemBackground"
		app:cardBackgroundColor="@color/colorWhite"
		app:cardCornerRadius="@dimen/dp10"
		>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp31"
				android:background="@color/color_card_ok"
				android:gravity="center|left"
				android:orientation="horizontal"
				>
				
				<TextView
					android:id="@+id/txv_plan_order"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/dp10"
					android:ellipsize="end"
					android:maxLines="1"
					android:text="订单号:11111111111111111111"
					android:textColor="@color/colorWhite"
					/>
				
				<include layout="@layout/space" />
				
				<app.card.view.CircleHeadImageView
					android:id="@+id/iv_plan_head"
					android:layout_width="@dimen/dp24"
					android:layout_height="@dimen/dp24"
					/>
				
				<TextView
					android:id="@+id/txv_plan_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_gravity="right|center"
					android:layout_marginRight="@dimen/dp10"
					android:ellipsize="end"
					android:maxLines="1"
					android:text="卡号:1111"
					android:textColor="@color/colorWhite"
					android:textSize="@dimen/sp12"
					/>
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp60"
				android:orientation="horizontal"
				>
				
				<LinearLayout
					android:layout_width="@dimen/dp0"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					>
					
					<TextView
						android:id="@+id/txv_plan_xfmoney"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp10"
						android:layout_marginRight="@dimen/dp10"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="30000000000"
						android:textColor="@color/grayColor_main"
						android:textSize="@dimen/sp14"
						/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp3"
						android:text="消费金额"
						android:textColor="@color/grayColor_main1"
						android:textSize="@dimen/sp12"
						/>
				</LinearLayout>
				
				<View
					android:layout_width="@dimen/dp1"
					android:layout_height="match_parent"
					android:layout_marginBottom="@dimen/dp15"
					android:layout_marginTop="@dimen/dp15"
					android:background="@color/grayColor_line"
					/>
				
				<LinearLayout
					android:layout_width="@dimen/dp0"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					>
					
					<TextView
						android:id="@+id/txv_plan_haimoney"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp10"
						android:layout_marginRight="@dimen/dp10"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="300"
						android:textColor="@color/grayColor_main"
						android:textSize="@dimen/sp14"
						/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp3"
						android:text="还款金额"
						android:textColor="@color/grayColor_main1"
						android:textSize="@dimen/sp12"
						/>
				</LinearLayout>
				
				<View
					android:layout_width="@dimen/dp1"
					android:layout_height="match_parent"
					android:layout_marginBottom="@dimen/dp15"
					android:layout_marginTop="@dimen/dp15"
					android:background="@color/grayColor_line"
					/>
				
				<LinearLayout
					android:layout_width="@dimen/dp0"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					>
					
					<TextView
						android:id="@+id/txv_plan_sxmoney"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp10"
						android:layout_marginRight="@dimen/dp10"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="300"
						android:textColor="@color/grayColor_main"
						android:textSize="@dimen/sp14"
						/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp3"
						android:text="手续费"
						android:textColor="@color/grayColor_main1"
						android:textSize="@dimen/sp12"
						/>
				</LinearLayout>
				
				<View
					android:layout_width="@dimen/dp1"
					android:layout_height="match_parent"
					android:layout_marginBottom="@dimen/dp15"
					android:layout_marginTop="@dimen/dp15"
					android:background="@color/grayColor_line"
					/>
				
				<LinearLayout
					android:layout_width="@dimen/dp0"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					>
					
					<TextView
						android:id="@+id/txv_plan_xfbishu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp10"
						android:layout_marginRight="@dimen/dp10"
						android:ellipsize="end"
						android:maxLines="1"
						android:text="300"
						android:textColor="@color/grayColor_main"
						android:textSize="@dimen/sp14"
						/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp3"
						android:text="消费笔数"
						android:textColor="@color/grayColor_main1"
						android:textSize="@dimen/sp12"
						/>
				</LinearLayout>
			</LinearLayout>
			
			<TextView
				android:id="@+id/txv_content_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/dp10"
				android:layout_marginLeft="@dimen/dp20"
				android:text="xxxxxxx"
				android:visibility="gone"
				/>
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="@dimen/dp10"
				>
				
				<ImageView
					android:id="@+id/iv_plan_status"
					android:layout_width="@dimen/dp20"
					android:layout_height="@dimen/dp20"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/dp15"
					android:scaleType="fitXY"
					/>
				
				<TextView
					android:id="@+id/txv_plan_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/dp8"
					android:layout_toRightOf="@+id/iv_plan_status"
					android:text="成功"
					android:textSize="@dimen/sp16"
					/>
				
				<android.support.v7.widget.CardView
					android:id="@+id/card_pause"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp10"
					android:layout_marginRight="@dimen/dp10"
					android:layout_toRightOf="@+id/txv_plan_status"
					android:foreground="?attr/selectableItemBackground"
					app:cardBackgroundColor="@color/grayColor_line"
					app:cardCornerRadius="@dimen/dp10"
					>
					
					<TextView
						android:id="@+id/txv_plan_pause"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingBottom="@dimen/dp2"
						android:paddingLeft="@dimen/dp10"
						android:paddingRight="@dimen/dp10"
						android:paddingTop="@dimen/dp2"
						android:text="取消"
						android:textSize="@dimen/sp12"
						/>
				</android.support.v7.widget.CardView>
				
				<TextView
					android:id="@+id/txv_plan_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="@dimen/dp35"
					android:text="2018-2-2 11:11:11"
					android:textColor="@color/color_pub_tv1"
					android:textSize="@dimen/sp12"
					/>
				
				<ImageView
					android:layout_width="@dimen/dp15"
					android:layout_height="@dimen/dp13"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="@dimen/dp10"
					android:src="@mipmap/arrow_right"
					/>
			</RelativeLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>